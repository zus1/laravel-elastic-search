{
    "name": "zus1/laravel-elastic-search",
    "description": "Library for using elasticsearch with laravel. Meant only for searching feature, not for administration",
    "keywords": ["laravel", "elastic", "php", "elastic-search",  "elasticsearch", "search", "elk"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mario Ožuška",
            "email": "mario.ozuska@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/database": "^11.0",
        "illuminate/pagination": "^11.0",
        "illuminate/support": "^11.0",
        "illuminate/http": "^11.0",
        "elasticsearch/elasticsearch": "^8.0",
        "monolog/monolog": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Zus1\\Elasticsearch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Zus1\\Elasticsearch\\Providers\\ElasticSearchServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
